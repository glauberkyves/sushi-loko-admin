<form method="post" id="form-franquia" class="cmxform form-horizontal tasi-form" novalidate="novalidate">
    {{ formHidden('idFranquia', entity.getIdFranquia()) }}
    {{ formHidden('idFranqueador', 1) }}
    {{ formHidden('idResponsavel', entity.getIdOperador().getIdUsuario()) }}
    {{ formHidden('idOperador', entity.getIdOperador().getIdUsuario()) }}
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="noPessoa">Nome Franqueado</label>
        <div class="col-lg-10">
            <input type="text" class="form-control required" id="noFranquia" placeholder="Nome Franqueado"
                   name="noFranquia" value="{{ entity.getNoFranquia() }}">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="noResponsavel">Nome responsável</label>
        <div class="col-lg-10">
            <input type="text" class="form-control required nameLastName" id="noResponsavel" placeholder="Nome responsável"
                   name="noResponsavel" value="{{ entity.getIdResponsavel().getIdPessoa().getNoPessoa() }}" disabled>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="noEmailResponsavel">Email responsável</label>
        <div class="col-lg-9">
            <input type="email" class="form-control required" id="noEmailResponsavel" placeholder="Email responsável"
                   name="noEmailResponsavel" value="{{ entity.getIdResponsavel().getIdPessoa().getIdPessoaFisica().getNoEmail() }}">
        </div>
        <div class="col-lg-1">
            <a type="button" data-toggle="modal" href="#cadastrarUsuario" class="btn btn-primary cadastrarResponsavel">
                +
            </a>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="noOperador">Nome operador</label>
        <div class="col-lg-10">
            <input type="text" class="form-control required nameLastName" id="noOperador" placeholder="Nome operador"
                   name="noOperador" value="{{ entity.getIdOperador().getIdPessoa().getNoPessoa() }}" disabled>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="noEmailOperador">Email operador</label>
        <div class="col-lg-9">
            <input type="email" class="form-control required" id="noEmailOperador" placeholder="Email operador"
                   name="noEmailOperador" value="{{ entity.getIdOperador().getIdPessoa().getIdPessoaFisica().getNoEmail() }}">
        </div>
        <div class="col-lg-1">
            <a type="button" data-toggle="modal" href="#cadastrarUsuario" class="btn btn-primary cadastrarOperador">
                +
            </a>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="nuCep">CEP do franqueado</label>
        <div class="col-lg-10">
            <input type="text" class="form-control required cep" id="nuCep" placeholder="CEP do franqueado"
                   name="nuCep" data-mask="99999-999" value="{{ entity.getIdEndereco().getNuCep() }}">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="nuRua">Rua</label>
        <div class="col-lg-10">
            <input type="text" class="form-control required" id="noLogradouro" placeholder="Rua"
                   name="noLogradouro" value="{{ entity.getIdEndereco().getNoLogradouro() }}">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="idBairro">Bairro</label>
        <div class="col-lg-10">
            {{ formSelect('idBairro', {}, {'class': 'form-control required'}, {'0': 'Selecione'} ) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="idMunicipio">Município</label>
        <div class="col-lg-10">
            {{ formSelect('idMunicipio', {}, {'class': 'form-control required'}, {'0': 'Selecione'} ) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="idEstado">Estado</label>
        <div class="col-lg-10">
            {{ formSelect('idEstado', {}, {'class': 'form-control required'}, cmbEstado ) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="nuEndereco">Número endereço</label>
        <div class="col-lg-10">
            <input type="text" class="form-control required number" id="nuEndereco" placeholder="Número endereco"
                   name="nuEndereco" value="{{ entity.getIdEndereco().getNuEndereco() }}">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="noComplemento">Complemento</label>
        <div class="col-lg-10">
            <input type="text" class="form-control" id="noComplemento" placeholder="Complemento"
                   name="noComplemento" value="{{ entity.getIdEndereco().getNoComplemento() }}">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="noLogradouro">Endereço amigável</label>
        <div class="col-lg-10">
            <input type="text" class="form-control required" id="noLogradouro" placeholder="Endereço amigavel"
                   name="noLogradouro" value="{{ entity.getIdEndereco().getNoLogradouro() }}">
        </div>
    </div>
    <div id="apresentacao">
        <fieldset>
            <div class="form-group">
                <label for="inputPassword" class="col-sm-2 control-label">
                    <p type="button" id="btnEndereco" href="#"  name="btnEndereco" class="btn btn-primary">
                        Buscar
                    </p>
                </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control required"  id="txtEndereco" name="txtEndereco" placeholder="Local">
                </div>
            </div>
            <div id="mapa"></div>
            <input type="hidden" id="txtLatitude" name="noLatitude" value="{{ entity.getIdEndereco().getNoLatitude() }}" />
            <input type="hidden" id="txtLongitude" name="noLongitude" value="{{ entity.getIdEndereco().getNoLongitude() }}" />
        </fieldset>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="idCardapio">Cardápio</label>
        <div class="col-lg-10">
            {{ formSelect('', arrCardapio, {'class': 'form-control required', 'id': 'idCardapio', 'name': 'idCardapio'}, cmbCardapio) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="idPromocao">Promoção</label>
        <div class="col-lg-10">
            {{ formSelect('', arrPromocao, {'class': 'multi-select required', 'multiple': 'multiple', 'id': 'idPromocao', 'name': 'idPromocao[]'}, cmbPromocao) }}
        </div>
    </div>
    <div class="form-group">
        <br>
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-plus"></i>
            Salvar
        </button>
        <a type="button" href = "{{ path('super_franquia_index') }}" class="btn btn-danger">
            Cancelar
        </a>
    </div>
</form>
{% include 'SuperFranquiaBundle:Default:cadastrarUsuarioModal.html.twig' %}
{% include 'SuperFranquiaBundle:Default:modals.html.twig' %}

