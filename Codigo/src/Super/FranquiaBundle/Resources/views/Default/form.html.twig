<form method="post" id="form-franquia" class="cmxform form-horizontal tasi-form" novalidate="novalidate">
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="noPessoa">Nome Franqueado</label>
        <div class="col-lg-10">
            <input type="text" class="form-control required" id="noFranquia" placeholder="Nome Franqueado"
                   name="noFranquia" value="{{ entity.getNoFranquia() }}">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="noResponsavel">Nome responsável</label>
        <div class="col-lg-10">
            <input type="text" class="form-control required nameLastName" id="noResponsavel" placeholder="Nome responsável"
                   name="noResponsavel" value="{{ entity.getNoFranquia() }}">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="noEmailResponsavel">Email responsável</label>
        <div class="col-lg-10">
            <input type="email" class="form-control required" id="noEmailResponsavel" placeholder="Email responsável"
                   name="noEmailResponsavel" value="{{ entity.getNoFranquia() }}">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="noOperador">Nome operador</label>
        <div class="col-lg-10">
            <input type="text" class="form-control required nameLastName" id="noOperador" placeholder="Nome operador"
                   name="noOperador" value="{{ entity.getNoFranquia() }}">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="noEmailOperador">Email operador</label>
        <div class="col-lg-10">
            <input type="email" class="form-control required" id="noEmailOperador" placeholder="Email operador"
                   name="noEmailOperador" value="{{ entity.getNoFranquia() }}">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="nuCep">CEP do franqueado</label>
        <div class="col-lg-10">
            <input type="text" class="form-control required cep" id="nuCep" placeholder="CEP do franqueado"
                   name="nuCep" data-mask="99999-999" value="{{ entity.getNoFranquia() }}">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="nuEndereco">Número endereço</label>
        <div class="col-lg-10">
            <input type="text" class="form-control required number" id="nuEndereco" placeholder="Número endereco"
                   name="nuEndereco" value="{{ entity.getNoFranquia() }}">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="noEnderecoAmigavel">Endereço amigável</label>
        <div class="col-lg-10">
            <input type="text" class="form-control required" id="noEnderecoAmigavel" placeholder="Endereço amigavel"
                   name="noEnderecoAmigavel" value="{{ entity.getNoFranquia() }}">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="idCardapio">Cardápio</label>
        <div class="col-lg-10">
            {{ formSelect('', arrCardapio, {'class': 'form-control required', 'id': 'idCardapio', 'name': 'idCardapio'}, cmbCardapio) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label col-lg-2" for="idPromocao">Promoção</label>
        <div class="col-lg-10">
            {{ formSelect('', arrPromocao, {'class': 'multi-select required', 'multiple': 'multiple', 'id': 'idPromocao', 'name': 'idPromocao[]'}, cmbPromocao) }}
        </div>
    </div>
    <div class="form-group">
        <br>
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-plus"></i>
            Salvar
        </button>
        <a type="button" href = "{{ path('super_franquia_index') }}" class="btn btn-danger">
            Cancelar
        </a>
    </div>
</form>