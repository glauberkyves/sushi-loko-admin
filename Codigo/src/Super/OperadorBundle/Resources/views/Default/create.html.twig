{% extends 'SuperBaseBundle::layout.html.twig' %}
{% block body %}
    <section class="panel">
        <header class="panel-heading">
            Cadastrar Operador
              <span class="tools pull-right">
                <a class="fa fa-chevron-down" href="javascript:;"></a>
              </span>
        </header>

        <div class="panel-body">
            <form method="post" action=" " id="form-operador" class="form-horizontal tasi-form">
                <div class="form-group">
                    <label class="col-sm-2 control-label col-lg-2" for="noPessoa">Nome</label>

                    <div class="col-lg-10">
                        <input type="text" class="form-control required" id="noPessoa" placeholder="Nome do operador"
                               name="noPessoa" value="{{ entity.getIdPessoa().getNoPessoa() }}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label col-lg-2" for="noPessoa">E-mail</label>

                    <div class="col-lg-10">
                        <input type="text" class="form-control required email " id="noEmail" placeholder="E-mail do operador"
                               name="noEmail" value="{{ entity.getIdPessoa().getNoEmail() }}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label col-lg-2" for="noSenha">Senha</label>

                    <div class="col-lg-10">
                        <input type="password" class="form-control required" id="noSenha"
                               name="noSenha" value="">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label col-lg-2" for="noSenhaConfirmar">Confirmação de Senha</label>

                    <div class="col-lg-10">
                        <input type="password" class="form-control required" id="noSenhaConfirmar"
                               name="noSenhaConfirmar" value="">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-plus"></i>
                            Salvar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </section>
{% endblock body %}
