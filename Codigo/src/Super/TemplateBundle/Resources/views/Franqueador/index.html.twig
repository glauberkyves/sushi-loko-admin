{% extends 'SuperBaseBundle::layout.html.twig' %}
{% block body %}
    <section class="panel">
        <header class="panel-heading">
            Pesquisar Templates de E-mail
              <span class="tools pull-right">
                <a class="fa fa-chevron-down" href="javascript:;"></a>
              </span>
        </header>
        <div class="panel-body">
            <form method="post" action=" " id="form-franquia" class="form-horizontal tasi-form">
                <div class="form-group">
                    <label class="col-sm-2 control-label col-lg-2" for="inputSuccess">Status</label>

                    <div class="col-lg-4">
                        {{ formSelect('idTipoTemplate', '', {class: 'form-control'}, cmb) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-search"></i>
                            Pesquisar
                        </button>
                        <a href="{{ path('super_franqueador_template_create') }}" class="btn btn-default">
                            <i class="fa fa-plus"></i>
                            Cadastrar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <section class="panel">
        <header class="panel-heading">
            Resultado da pesquisa
              <span class="tools pull-right">
                <a class="fa fa-chevron-down" href="javascript:;"></a>
              </span>
        </header>
        <div class="panel-body">
            <section id="unseen">
                <table class="table table-bordered table-striped table-condensed" data-grid="form-franquia">
                    <thead>
                    <tr>
                        <th data-column="noFranquia">Tipo de Template</th>
                        <th data-column="stAtivo">Status</th>
                        <th data-column="opcoes">Ações</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr class="odd">
                        <td valign="top" colspan="5">Acione a pesquisa</td>
                    </tr>
                    </tbody>
                </table>
            </section>
        </div>
    </section>
{% endblock body %}