{% extends 'SuperBaseBundle::layout.html.twig' %}
{% block body %}
    <section class="panel">
        <header class="panel-heading">
            Relatório Feedback
            <span class="tools pull-right">
                <a class="fa fa-chevron-down" href="javascript:;"></a>
            </span>
        </header>
        <div class="panel-body">
            <section id="unseen">
                <table class="table table-bordered table-striped table-condensed">
                    <thead>
                        <tr>
                            <th>Encerrada</th>
                            <th>Participantes</th>
                            <th>Média quesito 1</th>
                            <th>Média quesito 2</th>
                            <th>Média quesito 3</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="odd">
                            {% if relatorio %}
                                <td>{{ relatorio.stAtivo ? 'Não' : 'Sim' }}</td>
                                <td>{{ relatorio.participantes }}</td>
                                <td>{{ relatorio.media1 ? relatorio.media1|number_format(1, '.') : 0 }}</td>
                                <td>{{ relatorio.media2 ? relatorio.media2|number_format(1, '.') : 0 }}</td>
                                <td>{{ relatorio.media3 ? relatorio.media3|number_format(1, '.') : 0 }}</td>
                            {% else %}
                                <td valign="top" colspan="5">Não existem dados para gerar este relatório</td>
                            {% endif %}
                        </tr>
                    </tbody>
                </table>
            </section>
        </div>
    </section>
    <section class="panel">
        <header class="panel-heading">
            Lista de comentários dos usuários
            <span class="tools pull-right">
                <a class="fa fa-chevron-down" href="javascript:;"></a>
            </span>
        </header>
        <div class="panel-body">
            <section id="unseen">
                <table class="table table-bordered table-striped table-condensed">
                    <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Comentário</th>
                        <th>Data</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% if mensagens %}
                            {% for mensagem in mensagens %}
                                <tr class="odd">
                                    <td>
                                        <a href="#{{ mensagem.idUsuario }}">
                                            {{ mensagem.noPessoa }}
                                        </a>
                                    </td>
                                    <td>{{ mensagem.dsResposta }}</td>
                                    <td>{{ mensagem.dtCadastro.format('d/m/Y H:i') }}</td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <td valign="top" colspan="5">Não existem dados para gerar este relatório</td>
                        {% endif %}
                    </tbody>
                </table>
            </section>
        </div>
    </section>
    <div class="col-lg-4">
        <section class="panel">
            <header class="panel-heading">
                Gráfico quesito 1
            </header>
            <div class="panel-body">
                <div id="media0" class="graph"></div>
            </div>
        </section>
    </div>
    <div class="col-lg-4">
        <section class="panel">
            <header class="panel-heading">
                Gráfico quesito 2
            </header>
            <div class="panel-body">
                <div id="media1" class="graph"></div>
            </div>
        </section>
    </div>
    <div class="col-lg-4">
        <section class="panel">
            <header class="panel-heading">
                Gráfico quesito 3
            </header>
            <div class="panel-body">
                <div id="media2" class="graph"></div>
            </div>
        </section>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/superbase/assets/morris.js-0.4.3/morris.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/superbase/assets/morris.js-0.4.3/raphael-min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/superbase/js/morris-script.js') }}" type="text/javascript"></script>

    <script>
        {% for i in 0..2 %}
            Morris.Line({
                element: 'media{{ i }}',
                data: {{ attribute(jsonMedia, i)|raw }},
                xkey: 'data',
                ykeys: ['media'],
                labels: ['Média'],
                lineColors: ['#6ccac9'],
                dateFormat: function (date) {
                    var date = new Date(date);
                    var month = date.getMonth()+1;
                    var month = (month < 10) ? "0" + month : month;
                    return month+'/'+date.getFullYear();
                },
                xLabelFormat: function(date) {
                    var month = date.getMonth()+1;
                    var month = (month < 10) ? "0" + month : month;
                    return month+'/'+date.getFullYear();
                }
            });
        {% endfor %}
    </script>
{% endblock %}