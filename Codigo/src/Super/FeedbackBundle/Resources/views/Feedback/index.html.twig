{% extends 'SuperBaseBundle::layout.html.twig' %}
{% block body %}
    <section class="panel">
        <header class="panel-heading">
            Pesquisar por feedback
              <span class="tools pull-right">
                <a class="fa fa-chevron-down" href="javascript:;"></a>
              </span>
        </header>
        <div class="panel-body">
            <form method="post" action=" " id="form-enquete" class="form-horizontal tasi-form">
                <div class="form-group">
                    <label class="col-sm-2 control-label col-lg-2" for="inputSuccess">Feedback</label>

                    <div class="col-lg-4">
                        <input type="text" class="form-control" id="noFeedback" placeholder="Nome" name="noFeedback"
                               value="">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label col-lg-2" for="inputSuccess">Data</label>

                    <div class="col-lg-4">
                        {{ formText('dtInicio', '', {
                            class: 'form-control',
                            'data-mask': '99/99/9999'
                        }) }}
                    </div>
                </div>
            </form>
        </div>
    </section>
    <section class="panel">
        <header class="panel-heading">
            Resultado da pesquisa
              <span class="tools pull-right">
                <a class="fa fa-chevron-down" href="javascript:;"></a>
              </span>
        </header>
        <div class="panel-body">
            <section id="unseen">
                <table class="table table-bordered table-striped table-condensed" data-grid="form-enquete">
                    <thead>
                    <tr>
                        <th data-column="noFeedback">Feedback</th>
                        <th data-column="dtInicio">Data Inicial</th>
                        <th data-column="stAtivo">Status</th>
                        <th data-column="opcoes">Opções</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr class="odd">
                        <td valign="top" colspan="4">Acione a pesquisa</td>
                    </tr>
                    </tbody>
                </table>
            </section>
        </div>
    </section>
{% endblock body %}
{% block javascripts %}
    <script>
        $(document).ready(function () {
            $("#form-enquete").submit();
        });
    </script>
{% endblock %}