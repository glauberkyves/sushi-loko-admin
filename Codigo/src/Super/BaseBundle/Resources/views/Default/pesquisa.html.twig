{% extends 'SuperBaseBundle::layout.html.twig' %}
{% block body %}
    <section class="panel">
        <header class="panel-heading">
            Busca inteligente
        </header>
        <div class="panel-body">
            <form class="form-horizontal tasi-form" method="get">

                <div class="form-group">
                    <label class="col-sm-2 control-label col-lg-2" for="inputSuccess">Sexo</label>
                    <div class="col-lg-10">
                        <div class="radio">
                            <label>
                                <input type="radio" name="sgSexo" id="masculino" value="m" {{ entity.getSgSexo() == 'm' ? 'checked' : '' }}>
                                Masculino
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="sgSexo" id="feminino" value="f" {{ entity.getSgSexo() == 'f' ? 'checked' : '' }}>
                                Feminino
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="sgSexo" id="todos" value="u" {{ entity.getSgSexo() == 'u' ? 'checked' : '' }}>
                                Todos
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Idade mínima</label>
                    <div class="col-lg-2">
                        <input type="text" name="nuIdadeMin" mask="99" class="form-control" value="{{ entity.getNuIdadeMin() }}" placeholder="Idade mínima">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Idade máxima</label>
                    <div class="col-lg-2">
                        <input type="text" name="nuIdadeMax" mask="99" class="form-control" id="" placeholder="Idade máxima">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Atividade</label>
                    <div class="col-lg-2">
                        <select name="nuAtividade" class="form-control m-bot15">
                            <option value="1">Que foi</option>
                            <option value="0">Que não foi</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Lista de franqueados</label>
                    <div class="col-lg-4">
                        <select name="idFranqueado" class="form-control m-bot15">
                            <option value="0">Todos</option>
                            <option value="">Teste</option>
                            <option value="">Teste</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Nos ultimos</label>
                    <div class="col-lg-2">
                        <input name="nuPeriodo" type="text" mask="99999" class="form-control">
                    </div>
                    <div class="col-lg-2">
                        <select name="noPeriodo" class="form-control m-bot15">
                            <option value="dia">Dias</option>
                            <option value="mes">Meses</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Que obtiveram bônus nos ultimos</label>
                    <div class="col-lg-2">
                        <input name="nuBonusPeriodo" type="text" mask="99999" class="form-control" id="">
                    </div>
                    <div class="col-lg-2">
                        <select name="noBonusPeriodo" class="form-control m-bot15">
                            <option value="dia">Dias</option>
                            <option value="mes">Meses</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Que obtiveram e utilizaram bônus nos ultimos</label>
                    <div class="col-lg-2">
                        <input name="nuBonusTransacionado" type="text" mask="99999" class="form-control" id="">
                    </div>
                    <div class="col-lg-2">
                        <select name="noBonusTransacionado" class="form-control m-bot15">
                            <option value="dia">Dias</option>
                            <option value="mes">Meses</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Que possuam saldo de bônus</label>
                    <div class="col-lg-2">
                        <select name="noSaldoBonus" class="form-control m-bot15">
                            <option value="igual">Igual</option>
                            <option value="maior">Maior</option>
                            <option value="menor">Menor</option>
                        </select>
                    </div>
                    <div class="col-lg-2">
                        <div class="input-group m-bot15">
                            <span class="input-group-addon">R$</span>
                            <input name="nuSaldoBonus" type="text" mask="decimal" class="form-control">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Que se registraram a</label>
                    <div class="col-lg-2">
                        <input name="nuCadastro" type="text" mask="99999" class="form-control" id="">
                    </div>
                    <div class="col-lg-2">
                        <select name="noCadastro" class="form-control m-bot15">
                            <option value="dia">Dias</option>
                            <option value="mes">Meses</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Que possuam média de consumo</label>
                    <div class="col-lg-2">
                        <select name="noMediaConsumo" class="form-control m-bot15">
                            <option value="igual">Igual</option>
                            <option value="maior">Maior</option>
                            <option value="menor">Menor</option>
                        </select>
                    </div>
                    <div class="col-lg-2">
                        <div class="input-group m-bot15">
                            <span class="input-group-addon">R$</span>
                            <input name="nuMediaConsumo" type="text" mask="decimal" class="form-control">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Que já consumiu até hoje</label>
                    <div class="col-lg-4">
                        <div class="input-group m-bot15">
                            <span class="input-group-addon">R$</span>
                            <input name="nuConsumoTotal" type="text" mask="decimal" class="form-control">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Aniversariantes do mês</label>
                    <div class="col-lg-10">
                        <label class="checkbox-inline">
                            <input name="nuAniversariante" type="checkbox" id="inlineCheckbox1" value="1">
                        </label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i>
                    Buscar
                </button>
            </form>
        </div>
    </section>
    <section class="panel">
        <header class="panel-heading">
            Filtro do resultado
        </header>
        <div class="panel-body">
            <form class="form-horizontal tasi-form" method="get">
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Acrescentar pontos</label>
                    <div class="col-lg-2">
                        <input type="number" class="form-control" id="">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Acrescentar bônus</label>
                    <div class="col-lg-2">
                        <div class="input-group m-bot15">
                            <span class="input-group-addon">R$</span>
                            <input type="text" mask="decimal" class="form-control">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
{% endblock %}