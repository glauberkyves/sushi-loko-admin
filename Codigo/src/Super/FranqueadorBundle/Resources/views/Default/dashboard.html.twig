{% extends 'SuperBaseBundle::layout.html.twig' %}
{% block body %}
    <div class="row state-overview">
        <div class="col-lg-12">
            <div id="morris">
                <div class="col-lg-6">
                    <section class="panel">
                        <header class="panel-heading">
                            Usuários cadastrados na última semana.
                        </header>
                        <div class="panel-body">
                            <div id="grafico-usuarios" class="graph"></div>
                        </div>
                    </section>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <section class="panel">
                            <header class="panel-heading">
                                Número de transações de ganho e uso de bônus.
                            </header>
                            <div class="panel-body">
                                <div id="grafico-transacoes" class="graph"></div>
                            </div>
                        </section>
                    </div>
                </div>
                {% if countTransacao %}
                    <div class="row">
                        <div class="col-lg-12 col-sm-12">
                            <div class="row state-overview">
                                <div class="col-lg-6 col-sm-6">
                                    <section class="panel">
                                        <div class="symbol terques">
                                            <i class="fa fa-user"></i>
                                        </div>
                                        <div class="value">
                                            <h1 class="count">R$ {{ countTransacao['valorCredito']|number_format(2,',','.') }}</h1>
                                            <p>Valor total gerado de bônus do dia anterior</p>
                                        </div>
                                    </section>
                                </div>
                                <div class="col-lg-6 col-sm-6">
                                    <section class="panel">
                                        <div class="symbol red">
                                            <i class="fa fa-tags"></i>
                                        </div>
                                        <div class="value">
                                            <h1 class="count2">R$ {{ countTransacao['valorDebito']|number_format(2,',','.') }}</h1>
                                            <p>Valor total usado de bônus do dia anterior</p>
                                        </div>
                                    </section>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
            <section class="panel">
                <table class="table table-hover personal-task">
                    <tbody>
                        <tr>
                            <td>
                                <i class=" fa fa-user"></i>
                            </td>
                            <td>Usuarios cadastrados ontem
                                <Ontem></Ontem>
                            </td>
                            <td>{{ countCadastro }}</td>
                        </tr>
                        {% if countTransacao %}
                            <tr>
                                <td>
                                    <i class="fa fa-arrows-h"></i>
                                </td>
                                <td>Número de transações de ganho de bônus do dia anterior</td>
                                <td>{{ countTransacao['transacaoCredito'] }}</td>
                            </tr>
                            <tr>
                                <td>
                                    <i class="fa fa-cog"></i>
                                </td>
                                <td>Número de transações de uso de bônus do dia anterior</td>
                                <td>{{ countTransacao['transacaoDebito'] }}</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </section>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
  <script src="{{ asset('bundles/superbase/assets/morris.js-0.4.3/morris.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('bundles/superbase/assets/morris.js-0.4.3/raphael-min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('bundles/superbase/js/morris-script.js') }}" type="text/javascript"></script>

  <script>
      Morris.Bar({
          element: 'grafico-usuarios',
          data: {{ jsonUsuario|raw }},
          xkey: 'data',
          ykeys: ['usuarios'],
          labels: ['Usuários'],
          barRatio: 0.4,
          xLabelAngle: 35,
          hideHover: 'auto',
          barColors: ['#6883a3']
      });

      Morris.Line({
          element: 'grafico-transacoes',
          data: {{ jsonTransacao|raw }},
          xkey: 'data',
          ykeys: ['credito', 'debito'],
          labels: ['Ganho de bônus', 'Uso de bônus'],
          lineColors: ['#6ccac9', '#ff6c60'],
          dateFormat: function (date) {
              var date = new Date(date);
              var month = date.getMonth()+1;
              var month = (month < 10) ? "0" + month : month;
              var day   = (date.getDate() < 10) ? "0" + date.getDate() : date.getDate();
              return day+'/'+month+'/'+date.getFullYear();
          },
          xLabelFormat: function(date) {
              var month = date.getMonth()+1;
              var month = (month < 10) ? "0" + month : month;
              var day   = (date.getDate() < 10) ? "0" + date.getDate() : date.getDate();
              return day+'/'+month;
          }
      });
  </script>
{% endblock %}