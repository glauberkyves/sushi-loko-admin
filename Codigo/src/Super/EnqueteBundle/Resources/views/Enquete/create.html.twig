{% extends 'SuperBaseBundle::layout.html.twig' %}
{% block body %}
    <section class="panel">
        <header class="panel-heading">
            Cadastrar Enquete
              <span class="tools pull-right">
                <a class="fa fa-chevron-down" href="javascript:;"></a>
              </span>
        </header>
        <div class="panel-body">
            <form method="post" action="{{ path('manter_enquete_create') }}" id="form-cadastro"
                  class="form-horizontal tasi-form" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="col-sm-2 control-label col-lg-3" for="inputSuccess">Nome</label>

                    <div class="col-lg-9">
                        <input type="text"  class="form-control required" id="noEnquete" name="noEnquete"
                               placeholder="Nome">
                    </div>
                </div>

                <div class="form-group">
                    <label for="txtData" class="control-label col-md-3">Pontos</label>

                    <div class="col-md-1">
                        <input type="text" class="form-control  required" mask="integer" id="nuPontos"
                                name="nuPontos"/>
                    </div>
                </div>

                <div class="form-group">
                    <label for="txtData" class="control-label col-md-3">Bonus:</label>


                    <div class="col-lg-2">
                        <div class="input-group m-bot15">
                            <span class="input-group-addon">R$</span>
                            <input type="text" mask="decimal"  id="nuBonus" name="nuBonus" class="form-control">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="txtData" class="control-label col-md-3">Data Inicial</label>
                    <div class="col-lg-3">
                        <div class="input-group m-bot15">
                            <span class="input-group-addon"><span class="fa  fa-calendar"></span> </span>
                            <input type="text" class="form-control required dateInit" id="datepicker"
                                   placeholder="Data Inicial" name="dtInicial"/>
                        </div>
                    </div>
                    <div class="col-lg-5">
                        <div  class=" dataMensagem alert alert-danger   alert-dismissible fade in" role="alert" style="display:none; ">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                            <strong>Atençao!</strong> Este campo não pode ser preenchido com Data passada.
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="txtData" class="control-label col-md-3">Data Final</label>

                    <div class="col-lg-3">
                        <div class="input-group m-bot15">
                            <span class="input-group-addon"><span class="fa  fa-calendar"></span> </span>
                            <input type="text" class="form-control required" id="datepicker2"
                                   placeholder="Data final" name="dtFim"/>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label col-lg-3" for="inputSuccess">Pergunta</label>

                    <div class="col-lg-9">
                        <textarea class="form-control required" placeholder="Pergunta" id="noPergunta"
                               name="noPergunta"  ></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label col-lg-3" for="inputSuccess">1° Resposta</label>

                    <div class="col-lg-9">
                        <input type="text" class="form-control required" placeholder="1° Resposta" id=""
                               name="resposta1">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label col-lg-3" for="inputSuccess">2² Resposta</label>

                    <div class="col-lg-9">
                        <input type="text" class="form-control required" id="" placeholder="2° Resposta"
                               name="resposta2">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label col-lg-3" for="inputSuccess">3° Resposta</label>

                    <div class="col-lg-9">
                        <input type="text" class="form-control" id="" placeholder="3° Resposta" name="resposta3">
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-sm-2 control-label col-lg-3" for="inputSuccess">Situação</label>

                    <div class="col-lg-9">
                        <select class="form-control required" id="stAtivo" name="stAtivo">
                            <option value="">Selecione...</option>
                            <option value="0">Inativo</option>
                            <option value="1">Ativo</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button type="submit" class="btn btn-primary saveForm">
                            <i class="fa fa-save"></i>
                            Salvar
                        </button>

                        <a href="{{ path('manter_enquete_index') }}" class="btn btn-default">
                            <i class="fa fa-times"></i>
                            Cancelar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </section>
{% endblock body %}
{% block javascripts %}
    <script>
        $(document).ready(function () {

            $(".dateInit").blur(function(){
                var dataInicial = $(".dateInit").val();
                var mes = dataInicial.slice(0,2);
                var dia = dataInicial.slice(3,5);
                var ano = dataInicial.slice(6,10);
                var sctringMont = ''+dia+'/'+mes+'/'+ano+'';

                var dateCurrent = new Date().valueOf();
                var dateDigit  = new Date(sctringMont).valueOf();


                if(dateDigit < dateCurrent)
                {
                    $(".dataMensagem").fadeIn();
                }else
                {
                    $(".dataMensagem").fadeOut();
                }
            });


            $("#datepicker").datepicker({
                format: 'dd/mm/yyyy',
                language: 'pt-BR'
            });
            $("#datepicker2").datepicker({
                format: 'dd/mm/yyyy',
                language: 'pt-BR'
            });
        });
    </script>
{% endblock %}