    <link href="{{ asset('bundles/superbase/css/bootstrap-reset.css') }}" rel="stylesheet">
    <!--external css-->
    <link href="{{ asset('bundles/superbase/assets/font-awesome/css/font-awesome.css') }}" rel="stylesheet"/>
    <!-- Custom styles for this template -->
    <link href="{{ asset('bundles/superbase/css/style.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/superbase/css/style-responsive.css') }}" rel="stylesheet"/>

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!-- js placed at the end of the document so the pages load faster -->
    <script src="{{ asset('bundles/superbase/js/jquery.js') }}"></script>
    <script src="{{ asset('bundles/superbase/js/bootstrap.min.js') }}"></script>
    <script class="include" type="text/javascript" src="{{ asset('bundles/superbase/js/jquery.dcjqaccordion.2.7.js') }}"></script>
    <script src="{{ asset('bundles/superbase/assets/fancybox/source/jquery.fancybox.js') }}"></script>
    <script src="{{ asset('bundles/superbase/js/jquery.scrollTo.min.js') }}"></script>
    <script src="{{ asset('bundles/superbase/js/jquery.nicescroll.js') }}" type="text/javascript"></script>
    <script type="text/javascript" src="{{ asset('bundles/superbase/js/jquery.validate.min.js') }}"></script>
    <script src="{{ asset('bundles/superbase/js/respond.min.js') }}"></script>
    <script src="{{ asset('bundles/superbase/DataTables-1.10.5/media/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('bundles/superbase/DataTables-1.10.5/media/js/dataTables.responsive.nightly.min.js') }}"></script>

    <!--right slidebar-->
    <script src="{{ asset('bundles/superbase/js/slidebars.min.js') }}"></script>

    <!--common script for all pages-->
    <script src="{{ asset('bundles/superbase/js/common-scripts.js') }}"></script>
    <script src="{{ asset('bundles/superbase/app/js/validate.js') }}"></script>
    <script src="{{ asset('bundles/superbase/js/grid.js') }}"></script>
    <script src="{{ asset('bundles/superbase/js/respond.min.js') }}"></script>
    <script src="{{ asset('bundles/superbase/js/bootstrap-fileupload.js') }}"></script>

    <script type="text/javascript" src="/bundles/site/assets/js/bootstrap-inputmask/bootstrap-inputmask.js"></script>

    <!-- SCRIPT BASE -->
    <script type="text/javascript" src="/bundles/site/app/js/mask.js"></script>
    <script type="text/javascript" src="/bundles/site/app/js/validate.js"></script>

</head>

<body class="login-body">

<div class="container">

    <form class="form-signin" action="{{ path('login_check') }}" method="post">
        <h2 class="form-signin-heading">Entrar</h2>

        <div class="login-wrap">
            {% if(app.session.flashbag.peekAll|length) %}
                {% for label, flashes in app.session.flashbag.all %}
                    <div class="alert alert-block alert-{{ label|replace({'error': 'danger'}) }} fade in">
                        <button type="button" class="close close-sm" data-dismiss="alert">
                            <i class="fa fa-times"></i>
                        </button>
                        {% for flash in flashes %}
                            {{ flash }}<br/>
                        {% endfor %}
                    </div>
                {% endfor %}
            {% elseif error %}
                <div class="alert alert-block alert-danger fade in">
                    <button type="button" class="close close-sm" data-dismiss="alert">
                        <i class="fa fa-times"></i>
                    </button>
                    E-mail / senha inv√°lidos.
                </div>
            {% endif %}

            {{ formText('_username', '', {
                class: 'form-control required cpf',
                placeholder: 'Seu CPF',
                autofocus:'',
                'data-mask': 'cpf'
            }) }}
            {{ formPassword('_password', '', {class: 'form-control required', placeholder: 'Sua senha'}) }}
            <label class="checkbox">
                <span class="pull-right">
                    <a data-toggle="modal" href="#myModal"> Esqueceu sua senha?</a>
                </span>
            </label>
            <button class="btn btn-lg btn-login btn-block" type="submit">Entrar</button>
        </div>
    </form>
    <!-- Modal -->
    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Esqueceu sua senha?</h4>
                </div>
                <form method="post" action="{{ path('site_esqueci_senha') }}" id="form-cadastro" class="form-horizontal">
                    <div class="modal-body">
                        <p>Entre com seu e-mail abaixo para resetar sua senha.</p>
                        <input type="text" id="email" name="noEmail" placeholder="Email" autocomplete="off" class="form-control placeholder-no-fix">
                    </div>
                    <div class="modal-footer">
                        <button data-dismiss="modal" class="btn btn-default" type="button">Cancelar</button>
                        <button class="btn btn-success" type="submit">Recuperar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</body>
</html>